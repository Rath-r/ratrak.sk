---
import "../../styles/global.css";
import { teaching } from "../../content/teaching.js";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Teaching — ratrak.sk</title>
  </head>

  <body>
    <main class="container">
      <header class="hero">
        <h1>Teaching</h1>
        <p class="lead">
          Small courses and workshops: micro:bit, Python, and learning by building.
        </p>

        <div class="card">
          <strong>Contact:</strong>
          <span class="muted">
            The fastest way is LinkedIn DM.
          </span>
        </div>

        <div class="meta" style="margin-top: 10px;">
          <a
            href="https://www.linkedin.com/in/lucia-parcová-šálková-bb935564/"
            target="_blank"
            rel="noreferrer"
          >
            open LinkedIn
          </a>
          <a href="/">home</a>
        </div>
      </header>

      <div class="stack">
        <section class="section">
          <h2>What I teach</h2>

          <div class="grid">
            {teaching.map((t) => (
              <article class="item">
                <div class="item-title">
                  <strong>{t.title}</strong>
                  <span class="pill">{t.tag}</span>
                </div>

                <p>{t.description}</p>

                {t.meta && (
                  <div class="meta">
                    {t.meta.map((m) => (
                      <span>{m}</span>
                    ))}
                  </div>
                )}
              </article>
            ))}
          </div>
        </section>

        <section class="section">
          <h2>How I teach</h2>
          <div class="grid">
            <article class="item">
              <p>
                I focus on understanding and confidence, not rushing through syntax.
              </p>
              <p>
                We build small projects, debug together, and learn how to ask good questions.
              </p>
              <p>
                I teach kids most often, but I’m happy to teach adults too.
              </p>
            </article>
          </div>
        </section>
      </div>
    </main>
  </body>
</html>
