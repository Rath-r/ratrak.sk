---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { logbook } from "../../../content/logbook-sk.js";
---

<BaseLayout title="Logbook — ratrak.sk" lang="sk">
  <main class="container">
    <header class="hero">
      <h1>Logbook</h1>
      <p class="lead">Krátke poznámky. Malý pokrok. Bez tlaku.</p>

      <div class="meta" style="margin-top: 10px;">
        <a href="/sk">domov</a>
      </div>
    </header>

    <div class="stack">
      <section class="section">
        <div class="grid">
          {logbook.map((e) => (
            <article class="item">
              <div class="item-title">
                <strong>{e.title}</strong>
                <span class="pill">{e.tag}</span>
              </div>
              <p>{e.description}</p>
            </article>
          ))}
        </div>
      </section>
    </div>
  </main>
</BaseLayout>
